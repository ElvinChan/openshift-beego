#!/bin/bash
set -eo pipefail

version=${GOVERSION:-1.1.2}
srcfile=${GOFILE:-go$version.$(uname|tr A-Z a-z)-amd64.tar.gz}
url=${GOURL:-http://go.googlecode.com/files/$srcfile}
dist=${GODIST:-$OPENSHIFT_DIY_DIR/cache/go-$version}
selfname=`basename $OPENSHIFT_DIY_DIR`
OPENSHIFT_DIY_DIR_NO_SLASH=`(echo $OPENSHIFT_DIY_DIR | sed 's,//,/,g')`

if [ -d $dist/go ]; then
	echo "Use Go $version."
else
	mkdir -p $dist
	cd $dist
	echo "Installing Go $version"
	echo "Download..."
	curl -sO $url
	echo "Unzip..."
	tar zxf $srcfile
	rm -f $srcfile
	echo "done"
fi

export GOROOT=$dist/go
export GOPATH=$OPENSHIFT_REPO_DIR
export PATH=$GOROOT/bin:$PATH

echo "Get Go 3rd packages:"
echo "Beego web framework..."
beego=${BEEGO:-github.com/astaxie/beego}
go get $beego

echo "Setting Beego web framework.."

if [ ! -d $OPENSHIFT_DIY_DIR_NO_SLASH/src/$selfname ]
then
    mv $GOPATH/src/beego $GOPATH/src/$selfname
    sed -i -e "s:beego/controllers:$selfname/controllers:g" $GOPATH/src/$selfname/main.go
fi

appconf=${APPCONF:-$GOPATH/src/$selfname/conf/app.conf}
if [ ! -f $appconf ]; then
	echo -e "appname=$selfname" > $appconf
	echo -e "httpaddr=$OPENSHIFT_DIY_IP" >> $appconf
	echo -e "httpport=$OPENSHIFT_DIY_PORT" >> $appconf
fi

echo "Build $OPENSHFIT_APP_NAME..."



cd $GOPATH/src/$selfname
go build main.go

echo $GOROOT > $HOME/.env/user_vars/GOROOT
echo $GOPATH > $HOME/.env/user_vars/GOPATH

